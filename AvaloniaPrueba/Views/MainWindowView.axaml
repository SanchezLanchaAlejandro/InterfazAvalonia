<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaPrueba.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaPrueba.Views.MainWindowView"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaPrueba">
        
    <DockPanel LastChildFill="True">
        <!-- Menú superior -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="_Nuevo" Command="{CompiledBinding CrearPersonaCommand}"/>
                <MenuItem Header="_Guardar" Command="{CompiledBinding GuardarPersonaCommand}"/>
                <Separator/>
                <MenuItem Header="_Salir"/>
            </MenuItem>
            <MenuItem Header="_Editar">
                <MenuItem Header="_Copiar"/>
                <MenuItem Header="_Pegar"/>
            </MenuItem>
            <MenuItem Header="_Ayuda">
                <MenuItem Header="_Acerca De"/>
            </MenuItem>
        </Menu>
        
        <!-- Barra lateral izquierda -->
        <StackPanel DockPanel.Dock="Left" Background="Gray" Orientation="Vertical">
            <Button Command="{CompiledBinding MostrarCommand}" Margin="5" CornerRadius="20">
                <ToolTip.Tip>
                    <TextBlock Text="Mostrar"/>
                </ToolTip.Tip>
                <Image Source="avares://AvaloniaPrueba/Assets/mostrar.png" Width="24" Height="24"/>
            </Button>
            <Button Command="{CompiledBinding EditarCommand}" Margin="5" CornerRadius="20">
                <ToolTip.Tip>
                    <TextBlock Text="Editar"/>
                </ToolTip.Tip>
                <Image Source="avares://AvaloniaPrueba/Assets/editar.png" Width="24" Height="24"/>
            </Button>
        </StackPanel>
        
        <!-- Barra inferior -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Blue" BorderThickness="3" CornerRadius="20" Margin="5,2,5,2">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Spacing="4">
                    <Button Name="BtnGuardar" Content="Guardar Archivo" Background="LimeGreen" Width="150" Margin="5" CornerRadius="20" Command="{CompiledBinding GuardarPersonaCommand}"/>
                    <Button Name="BtCrearPersona" Content="Crear Persona" Background="{StaticResource RosaOscuro}" Width="130" Margin="5" CornerRadius="20"
                        Command="{CompiledBinding CrearPersonaCommand}" />
                </StackPanel>
            </Border>
            
            <StackPanel Grid.Column="2" Grid.Row="0">
                <Label VerticalAlignment="Center">Zoom:</Label>
                <TextBox Text="{CompiledBinding Zoom}"/>
                <Slider Width="100" Margin="4,-7,4,-7" VerticalAlignment="Center" Maximum="2.0" Minimum="1.0" Value="{CompiledBinding Zoom}"/>
            </StackPanel>
        </Grid>
        
        <!-- Área principal dividida en dos columnas -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Columna izquierda: DataGrid -->
                <ColumnDefinition Width="2*"/>
                <!-- Columna derecha: Formulario -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Contenedor para el DataGrid con fondo -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <ImageBrush Source="avares://AvaloniaPrueba/Assets/fondo.png" Stretch="UniformToFill"/>
                </Grid.Background>
                <DataGrid ItemsSource="{CompiledBinding Trabajadores}" AutoGenerateColumns="False"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{CompiledBinding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Edad" Binding="{CompiledBinding Edad}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Ficticio" Binding="{CompiledBinding Ficticio}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Formulario para crear un nuevo trabajador -->
            <StackPanel Grid.Column="1" Margin="10" Background="LightGray" VerticalAlignment="Stretch">
                <TextBlock Text="Nuevo Trabajador" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Nombre:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{CompiledBinding NuevoTrabajador.Nombre, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Edad:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{CompiledBinding NuevoTrabajador.Edad, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Ficticio:" Width="80" VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{CompiledBinding NuevoTrabajador.Ficticio, Mode=TwoWay}" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Agregar" Command="{CompiledBinding GuardarNuevoTrabajadorCommand}" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
    
    <Window.Resources>
        <SolidColorBrush x:Key="RosaOscuro" Color="#fa8996"/>
    </Window.Resources>
    
</Window>